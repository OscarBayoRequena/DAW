<!ELEMENT Minecraft (mobs)>
    <!ELEMENT mobs (mob*)>
        <!ELEMENT mob (imagen,nombre,tipo,descripcion,spawn,stats,hitbox,drops,enlaceMinecraftWiki)>

            <!ELEMENT imagen (#CDATA)>

            <!ELEMENT nombre (#PCDATA)>

            <!ELEMENT tipo (#PCDATA)>

            <!ELEMENT descripcion (#PCDATA)>

            <!ELEMENT spawn (#PCDATA)>

            <!ELEMENT stats (vida,ataque,armadura?)>

                <!ELEMENT vida (#PCDATA)>

                <!ELEMENT ataque ((ataqueFacil,ataqueNormal,ataqueDificil)|sinDano)>

                    <!ELEMENT ataqueFacil (#PCDATA)>

                    <!ELEMENT ataqueNormal (#PCDATA)>

                    <!ELEMENT ataqueDificil (#PCDATA)>

                    <!ELEMENT sinDano EMPTY>


                <!ELEMENT armadura (#PCDATA)>

            <!ELEMENT hitbox EMPTY>

            <!ELEMENT drops (drop+|noDrop)>

                <!ELEMENT drop (#PCDATA)>

                <!ELEMENT noDrop EMPTY>

            <!ELEMENT enlaceMinecraftWiki (#PCDATA)>

<!ATTLIST mob javaId CDATA #REQUIRED>
<!ATTLIST mob BEId CDATA #REQUIRED>
<!ATTLIST mob grupo CDATA #REQUIRED>


<!ATTLIST hitbox alto CDATA #REQUIRED>
<!ATTLIST hitbox ancho CDATA #REQUIRED>

